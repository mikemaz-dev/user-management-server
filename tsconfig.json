{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src", 
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
